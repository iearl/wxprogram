.tmpContainer{
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin: 10rpx 0;
}
.avatat_date{
  padding: 10rpx;
}
.avatat_date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;/*基于中心对齐*/
}
.avatat_date text{
  margin-left: 10rpx;
  font-size: 32rpx;
}
.company{
  margin-left: 10rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin: 10rpx;
}
.contentImg{
  width: 100%;
  height: 460rpx;
}
.content{
  font-size: 32rpx;
  text-indent: 32rpx;/*缩进一个字符*/
}
.collection_love image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.collection_love text{
  font-size: 28rpx;
  margin-right: 10rpx;
}